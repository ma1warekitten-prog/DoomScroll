        }

        .countdown-overlay {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-size: 3rem;
            font-weight: bold;
            color: #4b5563; /* Gray-600 */
            z-index: 20;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
        }
